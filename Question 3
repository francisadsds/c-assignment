#include <iostream>
#include <string>

using namespace std;

class Student {
private:
    string name;
    int rollNumber;
    float grade;

public:
    Student(string n, int r, float g) {
        name = n;
        rollNumber = r;
        grade = g;
    }

    void showDetails() {
        cout << "Student Name: " << name << endl;
        cout << "Roll Number: " << rollNumber << endl;
        cout << "Grade: " << grade << endl;
        cout << "-------------------------" << endl;
    }
};

class StudentManager {
private:
    Student* studentList[100];
    int totalStudents;

public:
    StudentManager() {
        totalStudents = 0;
    }

    void addNewStudent(string name, int rollNumber, float grade) {
        if (totalStudents >= 100) {
            cout << "Cannot add more students. List is full!" << endl;
            return;
        }
        studentList[totalStudents] = new Student(name, rollNumber, grade);
        totalStudents++;
    }

    void showAllStudents() {
        if (totalStudents == 0) {
            cout << "No students to display!" << endl;
            return;
        }
        for (int i = 0; i < totalStudents; i++) {
            studentList[i]->showDetails();
        }
    }

    ~StudentManager() {
        for (int i = 0; i < totalStudents; i++) {
            delete studentList[i];
        }
    }
};

int main() {
    StudentManager manager;

    manager.addNewStudent("Alice", 1, 90.5);
    manager.addNewStudent("Bob", 2, 85.0);

    manager.showAllStudents();

    return 0;
}
